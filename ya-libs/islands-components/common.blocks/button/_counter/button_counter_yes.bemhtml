block button, mod counter yes, this.ctx.counter {

    js: {
        var a = {},
            ctx = this.ctx,
            es = ['counter', 'show-counter'], e;

        while(e = es.shift())
            ctx[e] && (a[e] = ctx[e]);

        return a;
    }

    attrs, !this.ctx._counter: {

        var ctx = this.ctx,
            base = applyNext(ctx._counter = true) || {};

        base.onmousedown = ctx.counter;

        return base;
   }
}
